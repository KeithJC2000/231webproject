<%- include ../partials/header.ejs %> 
<%- include ../partials/main_nav.ejs %> 

<main>
    <div class="row align-items-ms-stretch">
    <div class="col-md-6 container">
      <div class="row">
          <div class="col-md-offset-3 col-md-6">
              <h1><%= title %> </h1>

            <div class="box" style="padding-bottom: 20px;">
            </div>
            <div class="box" >
              <table class="table table-bordered table-striped table-hover">
                  <!--Header Row-->
                  <tr>
                      <th class="text-center">username</th>
                      <th class="text-center">Email</th>
                      <th class="text-center">Display Name</th>
                      <th class="text-center">Admin User</th>
                      <th class="text-center">Medical User</th>
                      <th class="text-center">user Monitor</th>
                      <% if(adminUser || medicalUser) { %> 
                      <th class="text-center"></th>
                      <th class="text-center"></th>
                      <% } %> 
                  </tr>
                  <!--Repeatable Teamplate Row-->
                  <% for(let count = 0; count < userList.length; count++) {%> 
                        <tr>
                            <td class="text-center"><%= userList[count].username %> </td>
                            <td class="text-center"><%= userList[count].email %> </td>
                            <td class="text-center"><%= userList[count].displayName %> </td>
                            <td class="text-center"><%= userList[count].adminUser %> </td>
                            <td class="text-center"><%= userList[count].medicalUser %> </td>
                            <td class="text-center"><%= userList[count].userMonitor %> </td>
                            <% if(adminUser || medicalUser) { %> 
                            <td class="text-center">
                                <a href="/medicalUser-list/edit/<%= userList[count]._id %> " class="btn btn-primary"><i class="fas fa-pencil alt"></i>Edit</a>
                            </td>
                            <td class="text-center">
                                <a href="/medicalUser-list/delete/<%= userList[count]._id %> " class="btn btn-danger"><i class="fas fa-trash-lat"></i>Delete</a>
                            </td>
                            <% } %> 
                        </tr>
                    <% } %> 
              </table>
          </div>
      </div>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %> 
<%- include ../partials/footer.ejs %> 
